<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd">
    <transition name="createTutorial">
        <service-call name="tutorial.TutorialServices.create#Tutorial" in-map="context"/>
        <default-response url="."/>
    </transition>
    <actions>
        <entity-find entity-name="tutorial.Tutorial" list="tutorialList">
            <search-form-inputs/></entity-find>
    </actions>
    <widgets>

        <render-mode>
            <text type="html"><![CDATA[
            <style>
                .display-label {
                    color: red;
                    font-weight: bold;
                    background-color: #ffe6e6;
                    padding: 10px;
                    display: block;
                    text-align: center;
                    font-size :50px;
                }
            </style>
        ]]></text>
        </render-mode>
        <label text="Displaying All Listed Tutorial"
               type="div"
                style="display-label"/>

        <container-dialog id="CreateTutorialDialog" button-text="Create Tutorial" icon="">
            <form-single name="CreateTutorial" transition="createTutorial">
                <auto-fields-entity entity-name="tutorial.Tutorial" field-type="edit"/>
                <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
            </form-single>
        </container-dialog>
        <form-list name="ListTutorials" list="tutorialList" header-dialog="true" skip-form="true">
            <auto-fields-entity entity-name="tutorial.Tutorial" field-type="find-display"/>
        </form-list>
    </widgets>
</screen>